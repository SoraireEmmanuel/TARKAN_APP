<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#0DFFFFFF"
    app:cardCornerRadius="3dp"
    android:background="#008C0202"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<ImageView
    android:id="@+id/fotoUsuarioActivity"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/imgperfilprueba"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usuarioUsuarioActivity"
                android:textColor="@color/design_default_color_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Emma_89_75@gmail.com"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/design_default_color_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nombre: "
                android:textSize="13sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/nombreUsuarioActivity"
                android:textColor="@color/design_default_color_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Soraire Emmanuel"
                android:textSize="13sp"
                android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/design_default_color_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Telefono: "
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/telefonoUsuarioActivity"
                    android:textColor="@color/design_default_color_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2213048068"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
            </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>