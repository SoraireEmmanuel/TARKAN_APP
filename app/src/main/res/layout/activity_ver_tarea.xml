<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoregistro"
    tools:context=".ui.tareas.VerTareaActivity">
    <TextView
        android:id="@+id/verTareaFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="10sp"
        android:layout_gravity="right"
        android:layout_marginEnd="10sp"
        android:text="22/04/2020" />
    <TextView
        android:layout_marginTop="5sp"
        android:id="@+id/verTareaPrioridad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/cardview_light_background"
        android:layout_gravity="right"
        android:layout_marginEnd="10sp"
        android:text="Baja" />
    <TextView
        android:layout_marginTop="5sp"
        android:textSize="10sp"
        android:textColor="@color/cardview_light_background"
        android:layout_gravity="right"
        android:layout_marginEnd="10sp"
        android:id="@+id/verTareaEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciado" />
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/verTareaTitulo"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desarrollar una alarma" />

</LinearLayout>

    <TextView
        android:layout_marginTop="30sp"
        android:textColor="@color/cardview_light_background"
        android:textSize="15sp"
        android:textAlignment="center"
        android:id="@+id/verTareaDescripcion"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:text="descripcion asdfsaffssadffasa sadfa" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creador por:"
        android:textColor="@color/cardview_light_background"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/verTareaCreador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:onClick="creador"
        android:text="fulano@gmail.com"
        android:textColor="#9AFFFFFF"
        android:textSize="15sp" />
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:textSize="15sp"
        android:layout_marginRight="15dp"
        android:textColor="@color/cardview_light_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desarrollado por:" />

        <TextView

            android:id="@+id/verTareaDesarrollador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="realizador"
            android:text="TextView"
            android:textColor="#9AFFFFFF"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:textSize="15sp"
        android:layout_marginRight="15dp"
        android:textColor="@color/cardview_light_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testeado por:" />

        <TextView
            android:id="@+id/verTareaTesteador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="revisador"
            android:text="ElOtroFulanito@gmail.com"
            android:textColor="#98FFFFFF"
            android:textSize="15sp" />
</LinearLayout>
    <Button
        android:id="@+id/realizar"
        android:onClick="realizar"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#45DFCA"
        android:text="@string/realizar"
        android:background="#A3E2E8E7"
        />

    <Button
        android:id="@+id/termine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#A3E2E8E7"
        android:onClick="termine"
        android:text="Termine"
        android:textColor="#45DFCA" />

    <Button
        android:id="@+id/revisar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#A3E2E8E7"
        android:onClick="revisar"
        android:text="Reavizar"
        android:textColor="#45DFCA" />
</LinearLayout>